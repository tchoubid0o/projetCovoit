<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>omw.controllers.AccueilServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Champions</servlet-name>
    <servlet-class>omw.controllers.ChampionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Champions</servlet-name>
    <url-pattern>/champions</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Skins</servlet-name>
    <servlet-class>omw.controllers.SkinsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Skins</servlet-name>
    <url-pattern>/skins</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddChampion</servlet-name>
    <servlet-class>omw.controllers.AddChampionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddChampion</servlet-name>
    <url-pattern>/addChampion</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>accueil</welcome-file>
  </welcome-file-list>
</web-app>